<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent"
    tools:context=".Buffer_one">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="200dp"
        android:src="@drawable/chills"
       >

    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

       android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
       >
            <io.netopen.hotbitmapgg.library.view.RingProgressBar
            android:id="@+id/pbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            app:max="100"

            app:ringColor="@android:color/white"
                app:ringProgressColor="@android:color/primary_text_dark_nodisable"
                app:ringWidth="3dp"
                app:style="FILL"
                app:textColor="@android:color/white"
                app:textIsShow="true"
                app:textSize="16sp"

           />
        <io.netopen.hotbitmapgg.library.view.RingProgressBar
            android:id="@+id/pbar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:max="100"
            app:ringColor="@android:color/white"
            app:ringProgressColor="@android:color/white"
            app:ringWidth="3dp"
            app:style="STROKE"
            app:textColor="@android:color/white"
            app:textIsShow="true"
            app:textSize="16sp"

            />



   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/hp"
        android:text="ALOHOMORA"
        android:textSize="60sp"
        android:textColor="@android:color/white"
        />
</RelativeLayout>

